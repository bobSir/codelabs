<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.bob.codeLabs.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_anrCrashDemoFragment"
            app:destination="@id/anrCrashDemoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_netWorkDemoFragment"
            app:destination="@id/netWorkDemoFragment" />
    </fragment>

    <fragment
        android:id="@+id/anrCrashDemoFragment"
        android:name="com.bob.codeLabs.anrCrash.AnrCrashDemoFragment"
        android:label="AnrCrashDemoFragment"
        tools:layout="@layout/fragment_anr_crash_demo" />

    <fragment
        android:id="@+id/netWorkDemoFragment"
        android:name="com.bob.codeLabs.netWork.NetWorkDemoFragment"
        android:label="NetWorkDemoFragment"
        tools:layout="@layout/fragment_network_demo" />
</navigation>